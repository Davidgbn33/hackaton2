{% extends 'base.html.twig' %}

{% block title %}Telephone index{% endblock %}

{% block body %}
    <h1>Telephone index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cable_charger</th>
                <th>EstimatedPrice</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for telephone in telephones %}
            <tr>
                <td>{{ telephone.id }}</td>
                <td>{{ telephone.cableCharger ? 'Yes' : 'No' }}</td>
                <td>{{ telephone.estimatedPrice }}</td>
                <td>{{ telephone.createdAt ? telephone.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ telephone.updatedAt ? telephone.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_telephone_show', {'id': telephone.id}) }}">show</a>
                    <a href="{{ path('app_telephone_edit', {'id': telephone.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_telephone_new') }}">Create new</a>
{% endblock %}
